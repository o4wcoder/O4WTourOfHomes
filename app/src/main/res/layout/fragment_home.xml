<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ofw_splash_fin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_about_desc" />

            <ImageView
                android:id="@+id/ticket_location_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/sponsors"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="4"
            >
        <ImageView
            style="@style/SponsorLogo"
            android:src="@drawable/ladybird_logo"/>
        <ImageView
            style="@style/SponsorLogo"
            android:src="@drawable/highland_bakery_logo"/>
        <ImageView
            style="@style/SponsorLogo"
            android:src="@drawable/fourthwardpark_logo"/>
        <ImageView
            style="@style/SponsorLogo"
            android:src="@drawable/nonis_logo"/>
        <ImageView
            style="@style/SponsorLogo"
            android:src="@drawable/nandina_logo"/>
        <ImageView
            style="@style/SponsorLogo"
            android:src="@drawable/village_logo"/>
        <ImageView
            style="@style/SponsorLogo"
            android:src="@drawable/wingate_logo"/>
        </GridLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

